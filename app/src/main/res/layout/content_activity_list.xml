<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgr_list_ac"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:id="@+id/btnLearnNow"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:background="@drawable/bgr_btn"
                android:text="@string/learnNow"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#3600ff"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_marginTop="128dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/btnLearnByTopic"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/bgr_btn"
                android:text="@string/learnByTopic"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#3600ff"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnLearnNow"
                android:layout_marginLeft="64dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="64dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp" />

            <Button
                android:id="@+id/btnWhatDoPeopleLearn"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:background="@drawable/bgr_btn"
                android:text="@string/whatDoPeopleLearn"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#3600ff"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnLearnByTopic"
                android:layout_marginLeft="64dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="64dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgr_btn"
                android:text="@string/addAndTranslate"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#3600ff"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWhatDoPeopleLearn"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
