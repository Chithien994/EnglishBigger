<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgr_list_ac"
    tools:context="tcn.com.fragment.NoteFragment">

    <android.support.design.widget.AppBarLayout
        app:popupTheme="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:background="@color/colorAppBar"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:id="@+id/appBarLayout">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarView"
                android:layout_width="0dp"
                android:layout_height="56dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                tools:layout_editor_absoluteY="754dp"
                tools:layout_editor_absoluteX="8dp"
                app:layout_scrollFlags="scroll|enterAlways">

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:src="@drawable/back_w"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search_w"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <android.support.constraint.ConstraintLayout
                android:id="@+id/layoutView"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/txtNameToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/whatDoPeopleLearn2"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="8dp" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:id="@+id/layoutTab"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:paddingTop="4px"
        android:paddingBottom="4px"
        android:layout_height="94px">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabWhatDoPeopleLearn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:tabBackground="@drawable/tab_bgr_selector"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorApp"
            app:tabIndicatorHeight="0px"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#ffffff"
            app:tabTextAppearance="@style/StyleTabLayout"
            app:tabTextColor="#6cc39e"
            tools:ignore="PxUsage">

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn bè"
                tools:ignore="HardcodedText" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khác"
                tools:ignore="HardcodedText" />
        </android.support.design.widget.TabLayout>
    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/vpWhatDoPeopleLearn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rvItem"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:nestedScrollingEnabled="true"/>



</LinearLayout>
